@page
@model RestoPizza.Pages.Admin.Pizzas.DeleteModel

@{
    ViewData["Title"] = "Suppression";
}

<h1>@ViewData["Title"]</h1>

<h3>Etes-vous sûr de vouloir supprimer cette pizza ?</h3>
<div>
    <h4>Pizza</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.prix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.prix) €
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.vegetarienne)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.vegetarienne)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.ingredients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.ingredients)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Pizza.Id" />
        <input type="submit" value="Confirmer" class="btn btn-danger" /> |
        <a asp-page="./Index">Annuler</a>
    </form>
</div>
